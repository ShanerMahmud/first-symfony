{#    </div>#}
    <div class="row">
        <div class="col-9 mainSection" style="height: 100vh; position: fixed; overflow: hidden">
            {% block main %}

            {% endblock %}
        </div>
        <div class="col-3 bg-light" style="height: 100vh; position: fixed; overflow: hidden; right: 0">
            {% block shoppingCart %}
                <h1 class="text-center mt-5">Winkelmandje</h1>
            {% endblock %}
        </div>
    </div>
</div>


