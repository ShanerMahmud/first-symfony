        </div>
    {% endblock %}

            {% block main %}


<div class="container mt-5">
    <br><br><br><br><br><br>
    <div class="row">
        <div class="col-6">

            <form class="p-3" action="" method="POST">
                <div class="form-group">
                    <label for="name">Naam</label>
                    <input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Vul hier uw naam in">
                    <br>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Vul hier uw email adres in">
                    <br>
                </div>
                <div class="form-group">
                    <label for="message">Bericht</label>
                    <textarea class="form-control" id="message" rows="3" style="resize: none" placeholder="Vul hier uw bericht in"></textarea>
                </div>
                <br>
                <input type="submit" class="btn btn-primary" value="Verzenden" name="sendMessage">
            </form>
        </div>
        <div class="col-6 text-center mt-4">
            <h2>Adres</h2>
            <p>Jan van Galenstraat 14, 1051 KM, Amsterdam</p>
            <br>
            <h2>Telefoon</h2>
            <p>+31 (0) 20 123 4567</p>
            <br>
            <h2>Email</h2>
            <p>info@pizzasoprano.nl</p>
        </div>
    </div>
</div>



